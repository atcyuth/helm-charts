groups:
- name: cc3test-network-seperation.alerts
  rules:
  - alert: NetworkSegTestNotRunning
    expr: |
        last_over_time(cc3test_status{type="logical_network_separation", phase="call"}[7d]) == 0
    for: 16m
    labels:
      severity: warning
      service: cc3test
      context: '{{ $labels.service }}'
      meta: 'Network Seperation Test Not Running from past 7 days'
      dashboard: 'cc3test-api-status?var-service={{ $labels.service }}'
      report: 'cc3test/admin/object-storage/swift/containers/cc3test/objects/{{ $labels.base64path }}'
    annotations:
      description: 'Openstack Nova API is down: {{ $labels.name }}'
      summary: 'Openstack Nova API is down'